#WindowColors
set $bg-color		 #2f343f
set $inactive-bg-color   #2f343f
set $text-color          #f3f4f5
set $inactive-text-color #676E7D
set $urgent-bg-color     #E53935

# window colors
#                       border              background         text                 indicator
client.focused          $bg-color           $bg-color          $text-color          #07f1ee
client.unfocused        $inactive-bg-color $inactive-bg-color $inactive-text-color #07f1ee
client.focused_inactive $inactive-bg-color $inactive-bg-color $inactive-text-color #07f1ee
client.urgent           $urgent-bg-color    $urgent-bg-color   $text-color          #07f1ee


# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)

#i3-gaps
#for_window [class="^.*"] border pixel 0
gaps inner 12
gaps outer 5
#smart_gaps off

bar {
        status_command i3blocks -c ~/.config/i3/i3blocks.conf
	position top
	#i3bar_command i3bar --transparency	#transparency 
	strip_workspace_numbers yes
	colors{
			#background #0a0a0a00	transparency
			background $bg-color
	    		separator #757575
			#                  border             background         text
			focused_workspace  $bg-color          $bg-color          $text-color
			inactive_workspace $inactive-bg-color $inactive-bg-color $inactive-text-color
			urgent_workspace   $urgent-bg-color   $urgent-bg-color   $text-color
	}
}

